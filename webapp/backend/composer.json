{
    "name": "faithbit/ssms-backend",
    "description": "FaithBit Sales & Service Management System Backend API",
    "keywords": ["yii2", "framework", "sales", "service", "management"],
    "homepage": "https://faithbit.com",
    "type": "project",
    "license": "Proprietary",
    "support": {
        "source": "https://github.com/faithbit/ssms"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1.0",
        "yiisoft/yii2": "~2.0.45",
        "yiisoft/yii2-bootstrap5": "~2.0.2",
        "yiisoft/yii2-symfonymailer": "~2.0.3",
        "yiisoft/yii2-redis": "~2.0.18",
        "yiisoft/yii2-queue": "~2.3.0",
        "yii2tech/ar-softdelete": "~1.0.5",
        "yii2tech/balance": "~1.1.0",
        "creocoder/yii2-nested-sets": "~0.9.0",
        "kartik-v/yii2-mpdf": "~1.0",
        "kartik-v/yii2-grid": "~3.5.0",
        "kartik-v/yii2-widget-datetimepicker": "~1.4.2",
        "kartik-v/yii2-widget-select2": "~2.2.0",
        "kartik-v/yii2-widget-fileinput": "~1.1.0",
        "kartik-v/yii2-export": "~1.4.0",
        "himiklab/yii2-jqgrid-widget": "~0.8.0",
        "league/csv": "^9.8",
        "firebase/php-jwt": "^6.4",
        "ramsey/uuid": "^4.7",
        "predis/predis": "^2.1",
        "aws/aws-sdk-php": "^3.258",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.1.0",
        "yiisoft/yii2-gii": "~2.2.0",
        "yiisoft/yii2-faker": "~2.0.0",
        "phpunit/phpunit": "~9.5.0",
        "codeception/codeception": "^5.0.0",
        "codeception/verify": "^2.2",
        "codeception/specify": "^1.4",
        "symfony/browser-kit": ">=2.7 <=6.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        },
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    }
}